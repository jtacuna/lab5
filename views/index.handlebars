<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">

	<script src="js/jquery-1.11.0.js"></script>
	<!-- Include all compiled plugins (blelow), or include individual files as needed -->
	<script src="js/bootstrap.js"></script>
	<script src="js/hci-friends.js"></script>

	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/hci-friends.css" rel="stylesheet">

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<div class="container">
	<body>
		<h1>My HCI Friends</h1>
		<div>
			
			<img src="https://i.kym-cdn.com/entries/icons/original/000/020/981/CvllgCSUIAAvycY.jpg" width="500" height="300"></img>
			<h3>Me Hoy Minoy</h3>
			<p>This is DoodleBob</p>
			<hr>

			{{#each friends}}
				<div id="friend">
					<img src="{{imageURL}}" alt="Lorem Pixel image" class="img-responsive">
					<a href="#">
						<h3>{{name}}</h3>
					</a>
					<p>{{description}}</p>
					<hr>
				</div>
			{{/each}}

			<form id="addFriendForm" role="form" method="get" action="/add">
				<h3>Add a friend</h3>
			    <div class="form-group">
			      <label for="name">Name:</label>
			      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
			    </div>
			    <div class="form-group">
			      <label for="description">Description:</label>
			      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
			    </div>
			    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
			</form>
	</div>
	</body>
</div>
</html>
